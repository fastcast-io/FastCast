@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<script src="https://apis.google.com/js/platform.js" async defer></script>
<div class="jumbotron" style="background-image:url(https://im2.ezgif.com/tmp/ezgif-2-c089c04d7daf.gif)">
    <div class="text-center" style="font-family:courier,arial,helvetica;">
        <h4 style="font-family:courier;" class="alert alert-info" role="alert">Enter Session Code</h4>
        <form method="post">
            <div class="form-group">
                <!-- <label for="SessionId" class="text-dark" >Session Code</label> -->
                <input type="text" name="AuthCode">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-info btn-lg">Join Session</button>
            </div>
        </form>
        @if (ViewData["SessionStatus"] != null)
        {
            @if ((bool)ViewData["SessionStatus"])
            {
                <h5 class="alert alert-success" role="alert"> Congratulations!! You have successfully joined the session!</h5>
            }
            else
            {
                <h5 class="alert alert-danger" role="alert">That code doesn't work, try entering a new one!</h5>
            }
        }

        @if (ViewData["FormId"] != null)
        {
            <iframe src="@Url.Content(String.Format("https://docs.google.com/forms/d/e/{0}/viewform?embedded=true", @ViewData["FormId"]))" width="640" height="685" frameborder="0" marginheight="0" marginwidth="0">Loading…</iframe>
        }
    </div>


    </div>