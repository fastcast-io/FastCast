@page
@model FastCast.Pages.Session.EditModel

@{
    ViewData["Title"] = "Edit";
}

    <div class="container">
        <div class="row">&nbsp;</div>
        <div class="row">
            <h1>Edit my session</h1>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Session.SessionId" />
                    <div class="form-group">
                        <label asp-for="Session.SessionName" class="control-label"></label>
                        <input asp-for="Session.SessionName" class="form-control" />
                        <span asp-validation-for="Session.SessionName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Session.SessionCode" class="control-label"></label>
                        <input asp-for="Session.SessionCode" class="form-control" />
                        <span asp-validation-for="Session.SessionCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Session.Timer" class="control-label">Duration (seconds)</label>
                        <input asp-for="Session.Timer" class="form-control" />
                        <span asp-validation-for="Session.Timer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Session.FormId" class="control-label"></label>
                        <input asp-for="Session.FormId" class="form-control" />
                        <span asp-validation-for="Session.FormId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Session.Latitude" class="control-label"></label>
                        <input asp-for="Session.Latitude" class="form-control" />
                        <span asp-validation-for="Session.Latitude" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Session.Longitude" class="control-label"></label>
                        <input asp-for="Session.Longitude" class="form-control" />
                        <span asp-validation-for="Session.Longitude" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Session.Radius" class="control-label">Radius (meters)</label>
                        <input asp-for="Session.Radius" class="form-control" />
                        <span asp-validation-for="Session.Radius" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div>
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
