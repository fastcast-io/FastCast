@model FastCast.Pages.Session.DeleteModel

@{
    ViewData["Title"] = "Delete";
}


<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading text-center" style="font-family:courier,arial,helvetica;">WARNING!</h4>
    <h5 class="text-center" style="font-family:courier,arial,helvetica;">Are you sure you want to delete this?</h5>
    <hr>
    <p class="mb-0 text-center" style="font-family:courier,arial,helvetica;">Once a session is delete, it can not be revived.</p>
</div>
<div>
    <h4>Session</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.SessionCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.SessionCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.InitiatorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.InitiatorId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.Timer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.Timer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.FormId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.FormId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Session.SessionId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
