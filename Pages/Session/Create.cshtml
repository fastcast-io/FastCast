@page
@model FastCast.Pages.Session.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h3 style="font-family:courier,arial,helvetica;" class="bg-danger text-white text-center">Fill out the fields to create a new session</h3>
<hr />

@if (ViewData["codeExists"] != null && (bool)ViewData["codeExists"])
{
    <h2 style="color: red">That session code already exists. Enter a new one.</h2>
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Session.SessionCode" class="control-label"></label>
                <input asp-for="Session.SessionCode" class="form-control" />
                <span asp-validation-for="Session.SessionCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.InitiatorId" class="control-label"></label>
                <input asp-for="Session.InitiatorId" class="form-control" />
                <span asp-validation-for="Session.InitiatorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.Timer" class="control-label"></label>
                <input asp-for="Session.Timer" class="form-control" />
                <span asp-validation-for="Session.Timer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.FormId" class="control-label"></label>
                <input asp-for="Session.FormId" class="form-control" />
                <span asp-validation-for="Session.FormId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
